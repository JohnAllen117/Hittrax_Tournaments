<% provide(:title, "Edit Facility Details") %>
<h2>Edit your facility details</h2>
</br>
<div class='availability-form container'>
  <%= form_for @facility_availability do |f| %>
    <%= f.fields_for @facility do |g| %>
      <%= g.label "Company Name" %>
      <%= g.text_field :CompanyName, required: true %>
      <%= g.label "Contact Name" %>
      <%= g.text_field :ContactName, required: true %>
      <%= g.label "Email" %>
      <%= g.text_field :Email, required: true %>
      <%= g.label "Phone Number" %>
      <%= g.text_field :Phone, required: true %>
    <% end %>
    <div class='row'>
      <div class='col'><h2>Hours of Operation</h2></div>
      <%= f.time_zone_select :time_zone %>
    </div>
    <div class='row'>
      <div class='col-md-3'><h3>Weekday</h3></div>
      <div class='col-md-1'><h3>Open?</h3></div>
      <div class='col-md-5'><h3>Hours</h3></div>
    </div>
    <div class='row'>
      <div class='col col-md-3'><%= "#{Date::ABBR_DAYNAMES[1]}" %></div>
      <div class='col col-md-1'><%= f.check_box :monday_open? %></div>
      <div class='col col-md-5'>
        <%= f.time_select :monday_hours_start_time, default: Time.parse('9:00'), minute_step: 15 %>-
