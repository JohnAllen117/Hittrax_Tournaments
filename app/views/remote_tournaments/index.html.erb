<h1>Ongoing Remote Tournaments!</h1>
<%= link_to "Create a new tournament!", new_remote_tournament_path, class: "btn btn-primary" %>
<table class="table">
  <thead>
    <tr>
      <th><%= sort_link(@q, :start_date, 'Start Time', default_order: :desc) %></th>
      <th><%= sort_link(@q, :name) %></th>
      <th><%= sort_link(@q, 'Company Name', :facility) %></th>
    </tr>
  </thead>
  <tbody>
      <% if @remote_tournaments.present? %>
        <% @remote_tournaments.each do |tournament, index| %>
          <tr>
            <td>
              <%= tournament.start_date.in_time_zone(current_user.time_zone).strftime('%H:%M - %m/%d/%Y') %>
            </td>
            <td>
              <%= link_to tournament.name, tournament %>
            </td>
            <td>
              <%= tournament.facility.CompanyName %>
            </td>
          </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
