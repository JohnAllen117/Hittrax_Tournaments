<h1> <%= @remote_tournament.name %> - <%= @remote_tournament.start_date.strftime('%B %e %Y at %l:%M %p') %> </h1>
<br/>
<% if @schedules.present? %>
<ul>
  <% @schedules.each do |schedule| %>
    <li><%= "#{Team.find(schedule.away_team_id).Name} at #{Team.find_by(schedule.home_team_id).Name}: #{schedule.game_time}" %>
  <% end %>
</ul>
<% end %>
<h1>Schedule a game!</h1>
<%= simple_form_for Schedule.new do |f| %>
  <%= f.hidden_field :remote_tournament_id, value: @remote_tournament.id %>
  <%= f.input :game_time, as: :datetime, order: [:month, :day, :year] %>
  <%= f.input :home_team_id, collection: @remote_tournament.get_team_values.map { |obj| [obj[:name].gsub!('"', ''), obj[:master_id]] } %>
  <%= f.input :away_team_id, collection: @remote_tournament.get_team_values.map { |obj| [obj[:name].gsub!('"', ''), obj[:master_id]] } %>
  <%= f.button :submit, "Schedule Game", class: "button expand" %>
<% end %>
