<!DOCTYPE html>
<html>
<head>
  <title>HittraxTournaments</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
  <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
  <%= csrf_meta_tags %>
</head>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to image_tag("logo.png"), root_path, class: "navbar-brand" %>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <% if current_user.present? %>
        <ul class="nav navbar-nav">
          <li><%= link_to "Tournaments", remote_tournaments_path %></li>
        </ul>
        <ul class="nav navbar-nav">
          <li><%= link_to "Remote Facilities", facilities_path %></li>
        </ul>
      <% end %>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user.present? %>
        <li><%= link_to "Inbox", mailbox_inbox_path %></li>
          <% if TournamentInvite.where(facility_id: current_user.SId, accepted: 0).size > 0 %>
            <li><%= link_to "Notifications [#{TournamentInvite.where(facility_id: current_user.SId, accepted: 0).size}]", tournament_invites_path, style: "color: red" %></li>
          <% else %>
            <li><%= link_to "Notifications [#{TournamentInvite.where(facility_id: current_user.SId, accepted: 0).size}]", tournament_invites_path %></li>
          <% end %>
        <% end %>
        <% if current_user.present? %>
        <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.facility.CompanyName %><span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "View Facility", facility_path(current_user.facility)%></li>
            <li><%= link_to "Edit Facility Details", edit_facility_path(current_user.facility)%></li>
            <li role="separator" class="divider"></li>
            <li><%= link_to "Log out", edit_user_path(current_user) %></li>
          </ul>
        <% else %>
          <li><%= link_to "Login", new_user_path %></li>
        <% end %>
      </ul>
    </div>
  </div><!-- /.container-fluid -->
</nav>
<body>

<%= render partial: "shared/flash_messages", flash: flash %>

<%= yield %>

</body>
</html>
